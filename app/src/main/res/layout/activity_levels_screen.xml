<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LevelsScreenActivity"
    android:background="@color/appBackgroundColor">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_a_level_text"
        android:textSize="@dimen/title_text_size"
        android:layout_marginBottom="@dimen/levels_screen_title_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/easy_level_title_text"
        android:text="@string/easy_text"
        android:textSize="@dimen/levels_screen_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_text"
        android:layout_marginBottom="@dimen/levels_screen_levels_margin"/>

    <RelativeLayout
        android:id="@+id/easy_level_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/easy_level_title_text">

        <ImageView
            android:id="@+id/level_1_easy_btn"
            android:src="@drawable/levels_sprite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"/>

        <ImageView
            android:id="@+id/level_2_easy_btn"
            android:src="@drawable/levels_sprite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/level_3_easy_btn"
            android:src="@drawable/levels_sprite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/hard_level_title_text"
        android:text="@string/hard_text"
        android:textSize="@dimen/levels_screen_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/easy_level_buttons"
        android:layout_marginBottom="@dimen/levels_screen_levels_margin"/>

    <RelativeLayout
        android:id="@+id/hard_level_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/hard_level_title_text">

        <ImageView
            android:id="@+id/level_1_hard_btn"
            android:src="@drawable/levels_sprite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"/>

        <ImageView
            android:id="@+id/level_2_hard_btn"
            android:src="@drawable/levels_sprite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/level_3_hard_btn"
            android:src="@drawable/levels_sprite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>